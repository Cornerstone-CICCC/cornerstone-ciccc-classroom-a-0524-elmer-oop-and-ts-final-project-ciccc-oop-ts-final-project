<header>
    <form action="">
        <input type="text" placeholder="Search...">
        <div>
            <img src="" alt="search button" class="test">
        </div>
    </form>
    <div class="profile">
        <img src="yutaphoto.png" alt="Profile" class="profile-pic">
    </div>
</header>

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
    }

    form {
        flex-grow: 1;
        margin-right: 20px;
    }

    input[type="text"] {
        width: 500px;
        padding: 8px 16px; 
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 25px;
        outline: none;
        transition: width 0.3s ease;
    }

    input[type="text"]:focus {
        border-color: #888;
    }

    .profile {
        margin-left: 20px;
    }

    .profile-pic {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
    }
</style>

<script>
    import { taskList } from '../index.ts'
    const form = document.querySelector("form")
    const searchInput = document.querySelector("input")
  

    document.querySelector(".test")?.addEventListener("click",(e)=>{
        taskList.filteredTask=[]
        taskList.renderTasks()
    })


    form?.addEventListener("submit",(e)=>{
        e.preventDefault()        
        let targetInput = searchInput?.value
        if(targetInput?.trim()){
        taskList.tasks.forEach((item)=>{
            if(item.title.includes(targetInput)){
                taskList.addFilteredTask(item)
            }
        })
    }
      // rendering 
      taskList.renderTasks()
})       
</script>
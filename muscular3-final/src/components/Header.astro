<header>
    <form action="">
        <input type="text" placeholder="Search...">
        <div class="btn-close">
            <img src="../../public/close.png" alt="search button" class="delete">
        </div>
    </form>
    <div class="profile">
        <img src="yutaphoto.png" alt="Profile" class="profile-pic">
    </div>
</header>

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
    }

    form {
        display: flex;
        align-items: center;
        position: relative;
        flex-grow: 1;
        margin-right: 20px;
    }

    input[type="text"] {
        width: 500px;
        padding: 8px 16px; 
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 25px;
        outline: none;
        transition: width 0.3s ease;
    }

    input[type="text"]:focus {
        border-color: #888;
    }
    
    .profile {
        margin-left: 20px;
    }

    .profile-pic {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
    }

    .btn-close {
        display: none;
        width: 24px;
        height: 24px;
        margin-left: 5px;
        cursor: pointer;
    }

    .show {
        display: block;
    }

    .btn-close img {
        width: 100%;
    }
</style>

<script>
    import { taskList } from '../index.ts'
    const form = document.querySelector("form")
    const searchInput = document.querySelector("input")
    const closeButton = document.querySelector(".btn-close")

    document.querySelector(".delete")?.addEventListener("click",(e)=>{
        taskList.resetFilter()
        closeButton?.classList.remove("show")
        form?.reset()
    })

    form?.addEventListener("submit",(e)=>{
        e.preventDefault()        
        let targetInput = searchInput?.value
        if(targetInput?.trim()){
        taskList.tasks.forEach((item)=>{
            if(item.title.includes(targetInput)){
                taskList.addFilteredTask(item)
            }
        })

        closeButton?.classList.add("show")
    }

    // rendering 
    taskList.renderTasks()
})       
</script>
  .section-title {
    margin: 0;
  }
  .todo-board-contents {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 15px;
  }
  .todo-status {
    width: 80%;
    background-color: #5e94ff;
    padding: 20px;
    border-radius: 10px;
  }
  .todo-upcoming {
    background-color: #5e94ff;
  }
  .todo-inProgress {
    background-color: #5e94ff;
  }
  .todo-upcoming {
    background-color: #5e94ff;
  }
  .section-heading {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
  }
  .section-title {
    font-size: 1.5rem;
  }
  .section-icons {
    display: flex;
  }
  .count {
